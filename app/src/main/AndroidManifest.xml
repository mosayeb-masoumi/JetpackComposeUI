<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mediationjetpackcomposeapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MediationJetpackComposeApplication">
        <activity
            android:name=".login_example.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.MediationJetpackComposeApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".recepi_example.RecipeActivity"
            android:exported="false" />
        <activity
            android:name=".collaps_toolbar.CollapsToolbarActivity"
            android:exported="false"
            android:label="@string/title_activity_collaps_toolbar"
            android:theme="@style/Theme.MediationJetpackComposeApplication" />
        <activity
            android:name=".SplashActivity"
            android:exported="false"
            android:label="@string/title_activity_recipe"
            android:theme="@style/Theme.MediationJetpackComposeApplication" />
        <activity
            android:name=".meditation_example.DetailedActivity"
            android:exported="false"
            android:label="@string/title_activity_detailed"
            android:theme="@style/Theme.MediationJetpackComposeApplication" />
        <activity
            android:name=".meditation_example.ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.MediationJetpackComposeApplication" />
        <activity
            android:name=".meditation_example.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.MediationJetpackComposeApplication" />
    </application>

</manifest>